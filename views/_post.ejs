<li id="post-<%=post._id%>">
    <% if (locals.user && locals.user.id == post.user.id) {%>
      <small>
        <a class="delete-post-btn" href="/posts/destroy/<%= post._id %>">X</a>
      </small>
    <%}%>
  
      <p> 
        <%= post.content %>
        <br>
        <%= post.user.userName %>
      </p>

      <div class="post-comment">

        <% if(locals.user) { %>
            <form action="/comments/create" id="post-<%= post._id %>-comments-form" method="POST">
            <input type="text" name="content" id="" placeholder="Type here to add comment ..." required>
            <input type="hidden" name="post" value="<%= post._id %>">
            <input type="submit" value="Add Commnet">

            </form>
        <% } %>

            <div class=" post-comments-list">
              
              <ul id="post-comments-<%= post._id%>">

                <% for (comment of post.comments){%>
                  <%- include('_comment') %>
            
                <% } %>
                    

              </ul>
                 
            </div>

      </div>
  </li>