<link rel="stylesheet" href="/css/home.css">


<div id="home-container">

    <section id="feed-post">
        <h4>Posts</h4>
        <% if(locals.user) {%>
        <form action="/posts/create" id="new-post-form" method="POST">
            <textarea name="content" placeholder="Type here.." id="post" cols="30" rows="3"  required>  </textarea>
            <input type="submit" value="Post" id='post-btn'>
        </form>
        <% } %>
    
        <div id="user-post">
    
            <ul>
                <% for(post of posts) { %>
                    
                  <%- include('_post') %>
                
                <% }  %>
            </ul>
        </div>
    </section>
    
    <section id="user-friends">
        <h4>
            Friends
        </h4>
    
        <% for(u of all_users) {%>
            <p>
                <a href="/users/profile/<%= u.id %>"><%= u.userName%></a>
            </p>
        <%}%>
    
    </section>
    
    
</div>
<script src="/js/home_posts.js"></script>
